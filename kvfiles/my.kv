<ReportsWindowDetail>:
    name: "reportOfItem"
    BoxLayout:
        orientation: 'vertical'
        rows: 3
        canvas:
            Rectangle:
                source: '4.jpg'
                size: self.size
                pos: self.pos
        Button:
            id: ButtonScrollWindowReportid
            text: 'Нажмите'
            size_hint_y: None
            height: '48dp'
            width: '420dp'
            #Обработчик
            on_release:
                root.windowDraw()

        ScrollView:
            id: ScrollWindowReportid
            size_hint: (1, 1)
            do_scroll_x: False
            do_scroll_y: True


        Button:
            text: 'Вернуться назад'
            size_hint_y: None
            height: '48dp'
            width: '420dp'
            #Обработчик
            on_release:
                root.dellwidget()
                #Возвращение в первое окно
                app.root.current = "fourth"
                #Переход окна влево (текущее уходит вправо)
                root.manager.transition.direction = "right"


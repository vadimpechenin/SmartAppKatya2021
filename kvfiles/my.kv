# -*- coding: Windows-1251 -*-

WindowManager:
    MainWindow:
    NeiroClassWindow:
    QRWindow:
    FourthWindow:
    ReportsWindow:
    ReportsWindowDetail:

#: import TextInput kivy.uix.textinput.TextInput

# Одинаковая часть кода
<Itemlabel@Label>:
    font_size: '25sp' #scalabel pixels, одинаковые для разных расширений
    halign: 'left' #Горизонтальное выравнивание
    valign: 'middle' #Вертикальное выравнивание
    # Чтобы заработали свойства halign и valign нужно text_size растянуть по размерам самой метки
    text_size: self.size

<ItemImage@Image>:
    #size: self.texture_size
    #size_hint_x: 0.5
    #size_hint_y: 0.5
    size_hint : 0.8, 0.8
    pos_hint: {"right": 1, "center_y": .5}

<ItemButton@Button>:
    size_hint_y: None
    height: '90dp'
    size_hint_x: None
    width: '250dp'
    pos_hint: {"center_x": .5, "center_y": .5}
    #pos_hint: {"x":0.35, "y":0.3}

<ItemBoxLayout@BoxLayout>:
    padding:50


<MainWindow>:
    name: "main"
    GridLayout:
        canvas:
            Rectangle:
                source: '4.jpg'
                size: self.size
                pos: self.pos


        rows: 5
        BoxLayout:

            size_hint : 1, 0.8
            Image:
                padding: 30, 0, 0, 0
                source: '1.jpg'
                size_hint : 0.8, 0.8
                pos_hint: {"right": 1, "center_y": 0.2}

            Image:
                #left, top, right, bottom
                padding: 0, 0, 30, 0
                source: '3.jpg'
                size: self.texture_size
                size_hint : 1.5, 1.5
                pos_hint: {"x": 0, "top": 1}

        # 2 ряд
        ItemBoxLayout:

            ItemImage:
                source: '2.jpg'

            ItemButton:
                background_normal: '5.jpg'
                background_down: '5_1.jpg'
                #Обработчик
                on_release:
                    #Переход на второе окно
                    app.root.current = "camera_for_classification"
                    #Переход окна вправо (текущее уходит влево)
                    root.manager.transition.direction = "left"


        # 3 ряд
        ItemBoxLayout:
            ItemImage:
                source: '2.jpg'


            ItemButton:
                background_normal: '6.jpg'
                background_down: '6_1.jpg'
                #Обработчик
                on_release:
                    #Переход на второе окно
                    app.root.current = "camera_for_QR_scanning"
                    #Переход окна вправо (текущее уходит влево)
                    root.manager.transition.direction = "left"

        # 4 ряд
        ItemBoxLayout:
            ItemImage:
                source: '2.jpg'


            ItemButton:
                background_normal: '9.jpg'
                background_down: '9_1.jpg'
                #Обработчик
                on_release:
                    #Переход на второе окно
                    app.root.current = "fourth"
                    #Переход окна вправо (текущее уходит влево)
                    root.manager.transition.direction = "left"

        # 5 ряд
        ItemBoxLayout:
            ItemImage:
                source: '2.jpg'

            ItemButton:
                background_normal: '8.jpg'
                background_down: '8_1.jpg'
                #Обработчик
                on_release:
                    #Переход на второе окно
                    app.root.current = "reports"
                    #Переход окна вправо (текущее уходит влево)
                    root.manager.transition.direction = "left"


<NeiroClassWindow>:
    name: "camera_for_classification"

    BoxLayout:
        orientation: 'vertical'
        Camera:
            id: camera
            size_hint: (1, 0.8)
            pos_hint: {"center_x": 0.5, "top": 0.95}
            canvas.before:
                PushMatrix
                Rotate:
                    angle: -90
                    origin: self.center
            canvas.after:
                PopMatrix
            #play: False

        ToggleButton:
            text: 'Начало работы по распознаванию'
            on_press:

                camera.play = not camera.play
                root.btn()
            size_hint_y: None
            height: '48dp'
        Button:
            text: 'Захват изображения для работы'
            size_hint_y: None
            height: '48dp'
            on_press: root.capturePhoto()
        Button:
            text: 'Вернуться назад'
            size_hint_y: None
            height: '48dp'
            #Обработчик
            on_release:
                #Возвращение в первое окно
                app.root.current = "main"
                #Переход окна влево (текущее уходит вправо)
                root.manager.transition.direction = "right"

<QRWindow>:
    name: "camera_for_QR_scanning"
    BoxLayout:
        orientation: 'vertical'
        Camera:
            id: camera
            size_hint: (1, 0.8)
            pos_hint: {"center_x": 0.5, "top": 0.95}
            canvas.before:
                PushMatrix
                Rotate:
                    angle: -90
                    origin: self.center
            canvas.after:
                PopMatrix
            #play: False

        ToggleButton:
            text: 'Начало работы по считыванию'
            on_press: camera.play = not camera.play
            size_hint_y: None
            height: '48dp'
        Button:
            text: 'Сканирование QR для работы'
            size_hint_y: None
            height: '48dp'
            on_press: root.capturePhoto()
        Button:
            text: 'Вернуться назад'
            size_hint_y: None
            height: '48dp'
            #Обработчик
            on_release:
                #Возвращение в первое окно
                app.root.current = "main"
                #Переход окна влево (текущее уходит вправо)
                root.manager.transition.direction = "right"

<FourthWindow>:
    name: "fourth"
    BoxLayout:
        orientation: 'vertical'
        rows: 4
        canvas:
            Rectangle:
                source: '4.jpg'
                size: self.size
                pos: self.pos

        BoxLayout:

            size_hint : 1, 1
            Image:
                padding: 30, 0, 0, 0
                source: '1.jpg'
                size_hint : 1, 1
                pos_hint: {"right": 1, "center_y": 0.2}

            Image:
                #left, top, right, bottom
                padding: 0, 0, 30, 0
                source: '9.jpg'
                size: self.texture_size
                size_hint : 1.5, 1.5
                pos_hint: {"x": 0, "top": 1}

        ScrollView:
            id: ScrollWindowid
            size_hint: (1, 1)
            do_scroll_x: False
            do_scroll_y: True


        Button:
            id: Scrollbuttonid
            text: 'Просмотреть номенклатуру'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "y": 0}
            height: '48dp'
            width: '420dp'
            #Обработчик
            on_release:
                #Вызывает окно из main.py
                root.ScrollWindow()

        Button:
            text: 'Вернуться назад'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "y": 0}
            height: '48dp'
            width: '420dp'
            #Обработчик
            on_release:
                #Возвращение в первое окно
                app.root.current = "main"
                #Переход окна влево (текущее уходит вправо)
                root.manager.transition.direction = "right"

